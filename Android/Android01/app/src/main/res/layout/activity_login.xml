<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".LoginActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:foregroundGravity="center"
            android:orientation="vertical"
            tools:ignore="ExtraText,MissingConstraints,UselessLeaf">

        <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center"
                tools:ignore="ExtraText,MissingConstraints,UselessParent">

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/splash"
                    android:background="@drawable/splash"
                    tools:ignore="ContentDescription,MissingConstraints,ImageContrastCheck"
                    tools:srcCompat="@tools:sample/avatars"/>

            <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:importantForAutofill="no"
                    android:hint="Username: sample@mail.com"
                    android:inputType="textEmailAddress"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sansation"
                    tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields"/>

            <EditText
                    android:id="@+id/user_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:importantForAutofill="no"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sansation"
                    tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/reset_captcha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="new"
                        android:clickable="true"
                        android:textSize="20dp"
                        android:fontFamily="@font/ubuntu"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/white"
                        tools:ignore="HardcodedText,SpUsage"/>
                <TextView
                        android:id="@+id/captcha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:importantForAutofill="no"
                        android:text="10Ab"
                        android:textSize="40dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sansation"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields"/>

            </LinearLayout>

            <EditText
                    android:id="@+id/entry_captcha"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:importantForAutofill="no"
                    android:textAlignment="center"
                    android:hint="CAPTCHA"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sansation"
                    android:textSize="20dp"
                    tools:ignore="HardcodedText,LabelFor,SpUsage,TextFields"/>

            <Button
                    android:id="@+id/sign_try"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:text="Sign in"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ubuntu"
                    tools:ignore="HardcodedText,SpUsage"/>

            <Button
                    android:id="@+id/change_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:text="Register"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ubuntu"
                    tools:ignore="HardcodedText,SpUsage"/>
            <Button
                    android:id="@+id/change_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:text="Calculator"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ubuntu"
                    tools:ignore="HardcodedText,SpUsage"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>