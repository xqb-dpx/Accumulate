<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".LoginActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/black"
            tools:ignore="ExtraText,MissingConstraints,UselessLeaf">
        <Button
                android:id="@+id/change_calculator"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_width="300dp"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:clickable="true"
                android:text="Calculator"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage"/>
        <Button
                android:id="@+id/change_music"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_width="300dp"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:clickable="true"
                android:text="Music Player"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage"/>
        <Button
                android:id="@+id/change_db"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_width="300dp"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:clickable="true"
                android:text="Data Reader"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage"/>
        <Button
                android:id="@+id/change_login"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_width="300dp"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:clickable="true"
                android:text="Login Page"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>